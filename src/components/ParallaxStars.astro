---
// Componente de fondo de estrellas con parallax
---

<div id="stars-container" class="fixed top-0 left-0 w-full h-full pointer-events-none z-0">
  <div class="stars-layer stars-small"></div>
  <div class="stars-layer stars-medium"></div>
  <div class="stars-layer stars-large"></div>
</div>

<style>
  #stars-container {
    overflow: hidden;
  }
  
  .stars-layer {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    transition: transform 0.3s ease-out;
  }
  
  .stars-small {
    background-image: radial-gradient(1px 1px at 25% 25%, rgba(255, 255, 255, 0.2) 100%, transparent),
                      radial-gradient(1px 1px at 50% 50%, rgba(255, 255, 255, 0.2) 100%, transparent),
                      radial-gradient(1px 1px at 75% 75%, rgba(255, 255, 255, 0.2) 100%, transparent),
                      radial-gradient(1px 1px at 25% 75%, rgba(255, 255, 255, 0.2) 100%, transparent),
                      radial-gradient(1px 1px at 75% 25%, rgba(255, 255, 255, 0.2) 100%, transparent),
                      radial-gradient(1px 1px at 85% 15%, rgba(255, 255, 255, 0.2) 100%, transparent),
                      radial-gradient(1px 1px at 15% 85%, rgba(255, 255, 255, 0.2) 100%, transparent);
    background-repeat: repeat;
    background-size: 200px 200px;
  }
  
  .stars-medium {
    background-image: radial-gradient(1.5px 1.5px at 15% 15%, rgba(255, 255, 255, 0.3) 100%, transparent),
                      radial-gradient(1.5px 1.5px at 35% 65%, rgba(255, 255, 255, 0.3) 100%, transparent),
                      radial-gradient(1.5px 1.5px at 65% 35%, rgba(255, 255, 255, 0.3) 100%, transparent),
                      radial-gradient(1.5px 1.5px at 85% 85%, rgba(255, 255, 255, 0.3) 100%, transparent),
                      radial-gradient(1.5px 1.5px at 45% 55%, rgba(255, 255, 255, 0.3) 100%, transparent);
    background-repeat: repeat;
    background-size: 400px 400px;
  }
  
  .stars-large {
    background-image: radial-gradient(2px 2px at 10% 10%, rgba(255, 255, 255, 0.5) 100%, transparent),
                      radial-gradient(2px 2px at 30% 40%, rgba(255, 255, 255, 0.4) 100%, transparent),
                      radial-gradient(2px 2px at 60% 30%, rgba(255, 255, 255, 0.4) 100%, transparent),
                      radial-gradient(2px 2px at 90% 90%, rgba(255, 255, 255, 0.4) 100%, transparent);
    background-repeat: repeat;
    background-size: 600px 600px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Solo activar el parallax si no es un dispositivo mÃ³vil (para mejor rendimiento)
    if (window.innerWidth > 768) {
      const starsSmall = document.querySelector('.stars-small') as HTMLElement;
      const starsMedium = document.querySelector('.stars-medium') as HTMLElement;
      const starsLarge = document.querySelector('.stars-large') as HTMLElement;
      
      document.addEventListener('mousemove', (e) => {
        const x = e.clientX / window.innerWidth;
        const y = e.clientY / window.innerHeight;
        
        // Ajuste de velocidad del parallax para cada capa
        if (starsSmall) starsSmall.style.transform = `translate(${x * -10}px, ${y * -10}px)`;
        if (starsMedium) starsMedium.style.transform = `translate(${x * -20}px, ${y * -20}px)`;
        if (starsLarge) starsLarge.style.transform = `translate(${x * -30}px, ${y * -30}px)`;
      });
    }
  });
</script>
