---
import { getTranslation } from '../utils/i18n';
import RotatingWords from './RotatingWords.astro';

interface Props {
  locale?: 'es' | 'en';
}

const { locale = 'es' } = Astro.props;

// Traducir según el idioma
const t = (key: string) => getTranslation(key, locale);

// Palabras para la animación
const rotatingWords = [
  'word-adventure',
  'word-universe',
  'word-journey',
  'word-world',
  'word-destiny',
  'word-realm',
  'word-legacy'
];

---

<section id="inicio" class="hero min-h-screen flex flex-col justify-center items-center px-4 py-20 overflow-hidden">
  <div class="absolute inset-0 z-0">
    <div class="particles-container">
      <div class="particle float-particle float-duration-15 absolute"></div>
      <div class="particle float-particle float-duration-25 float-delay-500 absolute"></div>
      <div class="particle float-particle float-duration-20 float-delay-1000 absolute"></div>
      <div class="particle float-particle float-duration-18 float-delay-1500 absolute"></div>
      <div class="particle float-particle float-duration-22 float-delay-2000 absolute"></div>
      <div class="particle float-particle float-duration-19 float-delay-2500 absolute"></div>
      <div class="particle float-particle float-duration-23 float-delay-3000 absolute"></div>
    </div>
  </div>
  
  <div class="hero-content text-center z-10 fade-in-up delay-300">
    <h1 class="text-shadow mb-8">
      <RotatingWords words={rotatingWords} locale={locale} />
    </h1>
    
    <p class="text-xl md:text-2xl text-white/90 mb-10 max-w-2xl mx-auto fade-in delay-500">
      {t('hero-desc')}
    </p>
    
    <a 
      href="#servidores" 
      class="hero-cta inline-flex items-center gap-3 px-8 py-4 rounded-full bg-primary/90 text-white font-bold text-lg shadow-glow border border-primary/50 transition-all duration-300 hover:shadow-lg hover:bg-primary hover:border-primary hover:-translate-y-1 floating-animation"
    >
      <span class="cta-text">{t('explore-servers')}</span>
      <span class="cta-icon spin-pulse">
        <i class="fas fa-compass"></i>
      </span>
    </a>
  </div>
</section>

<style>
  .hero {
    background: linear-gradient(135deg, rgba(1, 26, 56, 0.7) 0%, rgba(1, 26, 56, 0.8) 100%), url('/imgs/background.webp');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    position: relative;
  }
  
  .text-shadow {
    text-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
  }
  
  /* Animaciones personalizadas para reemplazar las de midudev */
  @keyframes spinPulse {
    0% {
      transform: rotate(0deg);
    }
    25% {
      transform: rotate(90deg);
    }
    50% {
      transform: rotate(180deg);
    }
    75% {
      transform: rotate(270deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
  
  .spin-pulse {
    animation: spinPulse 3s ease-in-out infinite;
  }
  
  @keyframes floatButton {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  
  .floating-animation {
    animation: floatButton 3s ease-in-out infinite;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .fade-in-up {
    animation: fadeInUp 1s ease-out forwards;
  }
  
  .delay-300 {
    animation-delay: 300ms;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  .fade-in {
    animation: fadeIn 1s ease-out forwards;
  }
  
  .delay-500 {
    animation-delay: 500ms;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0) translateX(0);
    }
    25% {
      transform: translateY(-15px) translateX(5px);
    }
    50% {
      transform: translateY(0) translateX(10px);
    }
    75% {
      transform: translateY(15px) translateX(5px);
    }
  }
  
  .float-particle {
    animation: float ease-in-out infinite;
  }
  
  .float-duration-15 {
    animation-duration: 15s;
  }
  
  .float-duration-18 {
    animation-duration: 18s;
  }
  
  .float-duration-19 {
    animation-duration: 19s;
  }
  
  .float-duration-20 {
    animation-duration: 20s;
  }
  
  .float-duration-22 {
    animation-duration: 22s;
  }
  
  .float-duration-23 {
    animation-duration: 23s;
  }
  
  .float-duration-25 {
    animation-duration: 25s;
  }
  
  .float-delay-500 {
    animation-delay: 500ms;
  }
  
  .float-delay-1000 {
    animation-delay: 1000ms;
  }
  
  .float-delay-1500 {
    animation-delay: 1500ms;
  }
  
  .float-delay-2000 {
    animation-delay: 2000ms;
  }
  
  .float-delay-2500 {
    animation-delay: 2500ms;
  }
  
  .float-delay-3000 {
    animation-delay: 3000ms;
  }
  
  .particles-container {
    width: 100%;
    height: 100%;
    overflow: hidden;
  }
  
  .particle {
    width: 6px;
    height: 6px;
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
  }
  
  .particle:nth-child(1) {
    top: 10%;
    left: 20%;
  }
  
  .particle:nth-child(2) {
    top: 30%;
    left: 80%;
  }
  
  .particle:nth-child(3) {
    top: 50%;
    left: 15%;
  }
  
  .particle:nth-child(4) {
    top: 70%;
    left: 60%;
  }
  
  .particle:nth-child(5) {
    top: 20%;
    left: 40%;
  }
  
  .particle:nth-child(6) {
    top: 60%;
    left: 30%;
  }
  
  .particle:nth-child(7) {
    top: 80%;
    left: 70%;
  }
</style>