        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {currentPartners.filter(partner => !partner.featured).map(partner => (
            <div class="partner-card bg-secondary/30 rounded-xl overflow-hidden border border-primary/20 hover:border-primary/50 transition-all hover:shadow-glow hover:-translate-y-1">
              <div class="partner-header p-4 flex items-center justify-between">
