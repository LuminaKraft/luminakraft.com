                <p class="text-white/80 flex items-center mt-1">
                  <i class="fas fa-server mr-2"></i> Servidor: {event.server}
                </p>
              </div>
              <p class="text-white/90 mb-6">{event.description}</p>
              {'registration' in event && event.registration ? (
                <a href="#" class="px-6 py-2 bg-primary/90 text-white font-bold rounded-lg hover:bg-primary transition-colors shadow-sm hover:shadow-glow inline-block">
                  Inscribirse Ahora
                </a>
              ) : 'progress' in event ? (
                <div>
                  <div class="flex justify-between mb-1">
                    <span class="text-white/80 text-sm">Progreso</span>
                    <span class="text-white/80 text-sm">{event.progress}%</span>
                  </div>
                  <div class="w-full bg-secondary/50 rounded-full h-2.5">
