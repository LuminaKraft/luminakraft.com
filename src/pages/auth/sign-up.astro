---
// Sign up page for LuminaKraft Account with multiple OAuth providers
import { supabaseUrl, supabaseAnonKey } from '../../config/supabase';
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getTranslation, getUserLocale, updateTextsForLocale } from "../../utils/i18n";

const url = new URL(Astro.request.url);
const isLauncher = url.searchParams.get('launcher') === 'true';
const port = url.searchParams.get('port');

const locale = getUserLocale();
const t = (key: string) => getTranslation(key, locale);
---

<!DOCTYPE html>
<html lang={locale}>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{t('auth-create-account')} - LuminaKraft</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body class="bg-secondary text-white font-kanit min-h-screen flex items-center justify-center p-4 relative overflow-hidden">
    <!-- Background elements similar to main page -->
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden -z-10 pointer-events-none">
        <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] rounded-full bg-primary/10 blur-[100px]"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] rounded-full bg-primary/10 blur-[100px]"></div>
    </div>

    <!-- Auth Config for JS -->
    <div id="auth-config" 
         data-supabase-url={import.meta.env.PUBLIC_SUPABASE_URL} 
         data-supabase-key={import.meta.env.PUBLIC_SUPABASE_ANON_KEY}
         class="hidden">
    </div>

    <div class="w-full max-w-md bg-secondary/60 backdrop-blur-md border border-primary/30 rounded-2xl shadow-glow p-8 animate-fade-up my-8">
        <div class="text-center mb-8">
            <a href="/" class="inline-block mb-4 hover:scale-105 transition-transform">
                <img src="/imgs/logo.png" alt="LuminaKraft Logo" class="h-16 mx-auto drop-shadow-glow" />
            </a>
            <h1 class="text-3xl font-bold text-white mb-2" data-i18n="auth-create-account">{t('auth-create-account')}</h1>
            <p class="text-white/60" data-i18n="auth-signup-subtitle">{t('auth-signup-subtitle')}</p>
        </div>

        <!-- OAuth Providers -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 mb-8">
            <button class="flex items-center justify-center gap-2 px-4 py-3 bg-[#5865F2] hover:bg-[#4752C4] text-white rounded-lg font-medium transition-all hover:-translate-y-1 hover:shadow-lg oauth-btn text-sm" data-provider="discord">
                <i class="fab fa-discord text-lg"></i>
                <span data-i18n="auth-signup-discord">{t('auth-signup-discord')}</span>
            </button>
            
            <button class="flex items-center justify-center gap-2 px-4 py-3 bg-[#00A4EF] hover:bg-[#0078D4] text-white rounded-lg font-medium transition-all hover:-translate-y-1 hover:shadow-lg oauth-btn text-sm" data-provider="azure">
                <i class="fab fa-microsoft text-lg"></i>
                <span data-i18n="auth-signup-microsoft">{t('auth-signup-microsoft')}</span>
            </button>

            <button class="flex items-center justify-center gap-2 px-4 py-3 bg-[#333] hover:bg-[#24292e] text-white rounded-lg font-medium transition-all hover:-translate-y-1 hover:shadow-lg oauth-btn text-sm" data-provider="github">
                <i class="fab fa-github text-lg"></i>
                <span data-i18n="auth-signup-github">{t('auth-signup-github')}</span>
            </button>

            <button class="flex items-center justify-center gap-2 px-4 py-3 bg-white hover:bg-gray-100 text-gray-800 rounded-lg font-medium transition-all hover:-translate-y-1 hover:shadow-lg oauth-btn text-sm" data-provider="google">
                <svg class="w-5 h-5" viewBox="0 0 24 24">
                    <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                    <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                    <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                    <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                </svg>
                <span data-i18n="auth-signup-google">{t('auth-signup-google')}</span>
            </button>
        </div>

        <div class="relative mb-8">
            <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-white/10"></div>
            </div>
            <div class="relative flex justify-center text-sm">
                <span class="px-2 bg-[#0b2545] text-white/40" data-i18n="auth-or-signup-email">{t('auth-or-signup-email')}</span>
            </div>
        </div>

        <form id="signup-form" class="space-y-4">
            <div>
                <label for="email" class="block text-sm font-medium text-white/80 mb-1" data-i18n="auth-email-label">{t('auth-email-label')}</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required 
                    class="w-full px-4 py-3 bg-secondary/50 border border-primary/30 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all text-white placeholder-white/30"
                    placeholder="name@example.com"
                />
            </div>
            
            <div>
                <label for="password" class="block text-sm font-medium text-white/80 mb-1" data-i18n="auth-password-label">{t('auth-password-label')}</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    required 
                    minlength="6"
                    class="w-full px-4 py-3 bg-secondary/50 border border-primary/30 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all text-white placeholder-white/30"
                    placeholder="••••••••"
                />
            </div>

            <div>
                <label for="confirm-password" class="block text-sm font-medium text-white/80 mb-1" data-i18n="auth-confirm-password-label">{t('auth-confirm-password-label')}</label>
                <input 
                    type="password" 
                    id="confirm-password" 
                    name="confirm-password" 
                    required 
                    minlength="6"
                    class="w-full px-4 py-3 bg-secondary/50 border border-primary/30 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all text-white placeholder-white/30"
                    placeholder="••••••••"
                />
            </div>

            <div id="error-message" class="hidden p-3 rounded-lg bg-red-500/20 border border-red-500/50 text-red-200 text-sm text-center"></div>
            <div id="success-message" class="hidden p-3 rounded-lg bg-green-500/20 border border-green-500/50 text-green-200 text-sm text-center"></div>

            <button type="submit" class="w-full py-3 bg-primary hover:bg-blue-600 text-white font-bold rounded-lg shadow-glow transition-all hover:-translate-y-1 hover:shadow-lg relative overflow-hidden group">
                <span class="relative z-10" data-i18n="auth-signup-btn">{t('auth-signup-btn')}</span>
                <div class="absolute inset-0 bg-gradient-to-r from-primary to-blue-500 opacity-0 group-hover:opacity-100 transition-opacity duration-200"></div>
            </button>

            <p class="text-xs text-center text-white/40 mt-4" data-i18n="auth-terms">
                <Fragment set:html={t('auth-terms')} />
            </p>
        </form>

        <div class="mt-6 text-center text-sm text-white/60">
            <span data-i18n="auth-already-account">{t('auth-already-account')}</span>
            <a href="/auth/sign-in" class="text-primary hover:text-blue-400 font-medium ml-1 transition-colors" data-i18n="auth-signin-link">{t('auth-signin-link')}</a>
        </div>
    </div>

    <script>
        import { createClient } from '@supabase/supabase-js';
        import { updateTextsForLocale, getUserLocale, getTranslation } from "../../utils/i18n";

        // Initialize i18n
        const userLocale = getUserLocale();
        if (userLocale) {
            updateTextsForLocale(userLocale);
        }

        const t = (key) => getTranslation(key, userLocale);

        // Initialize Supabase
        const config = document.getElementById('auth-config');
        const supabaseUrl = config.dataset.supabaseUrl;
        const supabaseKey = config.dataset.supabaseKey;
        const supabase = createClient(supabaseUrl, supabaseKey);

        // Check if we are in launcher mode
        const urlParams = new URLSearchParams(window.location.search);
        const isLauncher = urlParams.get('launcher') === 'true';
        const port = urlParams.get('port');

        // Handle OAuth Sign Up
        const oauthBtns = document.querySelectorAll('.oauth-btn');
        oauthBtns.forEach(btn => {
            btn.addEventListener('click', async () => {
                const provider = btn.dataset.provider;
                const redirectTo = new URL('/auth-callback', window.location.origin);
                
                if (isLauncher) {
                    redirectTo.searchParams.set('launcher', 'true');
                    if (port) redirectTo.searchParams.set('port', port);
                }

                try {
                    const { data, error } = await supabase.auth.signInWithOAuth({
                        provider: provider,
                        options: {
                            redirectTo: redirectTo.toString(),
                            scopes: provider === 'discord' ? 'identify email guilds' : undefined
                        }
                    });
                    if (error) throw error;
                } catch (error) {
                    console.error('OAuth error:', error);
                    showError(error.message);
                }
            });
        });

        // Handle Email Sign Up
        const form = document.getElementById('signup-form');
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirm-password').value;
            const submitBtn = form.querySelector('button[type="submit"]');
            const originalBtnText = submitBtn.querySelector('span').textContent;

            // Validate passwords match
            if (password !== confirmPassword) {
                showError(t('auth-passwords-mismatch'));
                return;
            }

            if (password.length < 6) {
                showError(t('auth-password-length'));
                return;
            }

            try {
                submitBtn.disabled = true;
                submitBtn.querySelector('span').textContent = t('auth-creating-account');
                
                const { data, error } = await supabase.auth.signUp({
                    email,
                    password,
                    options: {
                        emailRedirectTo: `${window.location.origin}/auth-callback${isLauncher ? `?launcher=true&port=${port}` : ''}`
                    }
                });

                if (error) throw error;

                if (data.user && data.session) {
                    // User signed up and auto-signed in (if email confirmation is disabled)
                    const redirectUrl = new URL(isLauncher ? '/auth-callback' : '/', window.location.origin);
                    if (isLauncher) {
                        redirectUrl.searchParams.set('launcher', 'true');
                        if (port) redirectUrl.searchParams.set('port', port);
                        redirectUrl.hash = `access_token=${data.session.access_token}&refresh_token=${data.session.refresh_token}`;
                    }
                    window.location.href = redirectUrl.toString();
                } else {
                    // Email confirmation required
                    showSuccess(t('auth-check-email'));
                    submitBtn.disabled = false;
                    submitBtn.querySelector('span').textContent = originalBtnText;
                    form.reset();
                }

            } catch (error) {
                console.error('Sign up error:', error);
                showError(t('auth-failed') + ': ' + error.message);
                submitBtn.disabled = false;
                        redirectUrl.searchParams.set('port', port);
                    }

                    // Start OAuth flow
                    let scopes = undefined;
                    if (provider === 'discord') {
                        scopes = 'identify email guilds guilds.members.read';
                    } else if (provider === 'azure') {
                        scopes = 'openid profile email offline_access';
                    }

                    const { data, error } = await supabase.auth.signInWithOAuth({
                        provider: provider,
                        options: {
                            redirectTo: redirectUrl.toString(),
                            scopes: scopes
                        }
                    });

                    if (error) {
                        console.error('OAuth error:', error);
                        alert('Authentication failed: ' + error.message);
                        loadingEl.classList.add('hidden');
                        btn.disabled = false;
                        btn.classList.remove('opacity-70', 'cursor-not-allowed');
                    }
                    // If successful, browser will redirect to OAuth provider
                } catch (error) {
                    console.error('Unexpected error:', error);
                    alert('An unexpected error occurred');
                    loadingEl.classList.add('hidden');
                    btn.disabled = false;
                    btn.classList.remove('opacity-70', 'cursor-not-allowed');
                }
            });
        });
    </script>
</body>
</html>
